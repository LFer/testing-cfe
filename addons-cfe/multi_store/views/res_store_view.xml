<?xml version="1.0"?>
<openerp>
    <data>
        <!-- Tree -->
        <record id="view_res_store_tree" model="ir.ui.view">
            <field name="name">res.store.tree</field>
            <field name="model">res.store</field>
            <field name="arch" type="xml">
                <tree string="Stores">
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <!-- Form -->
        <record id="view_res_store_form" model="ir.ui.view">
            <field name="name">res.store.form</field>
            <field name="model">res.store</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="nro_suc_dgi" style="width:40%%;"/>
                        <field name="social_reason" readonly="1"/>
                        <field name="rut" readonly="1"/>
                        <field name="country_id"  style="width:40%%;" readonly="0" options="{'no_quick_create':True,'no_create_edit': True}"/>
                        <field name="state_id" style="width:40%%;" options="{'no_quick_create':True,'no_create_edit': True}"/>
                        <field name="city" style="width:40%%;" options="{'no_quick_create':True,'no_create_edit': True}"/>
                        <field name="street" style="width:40%%;" options="{'no_quick_create':True,'no_create_edit': True}"/>
                        <field name="phone" style="width:40%%;" options="{'no_quick_create':True,'no_create_edit': True}"/>
                        <field name="name"/>
                        <field name="parent_id"/>
                        <field name="company_id"/>
                        <field name="journal_ids"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_store" model="ir.actions.act_window">
            <field name="name">Stores</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.store</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_store" id="menu_action_res_store" parent="base.menu_users" sequence="20"/>

    </data>
</openerp>
